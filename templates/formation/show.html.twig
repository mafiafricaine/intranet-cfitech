{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ formation.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ formation.description }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ formation.dateDebut ? formation.dateDebut|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ formation.dateFin ? formation.dateFin|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>MaxStagiaire</th>
                <td>{{ formation.maxStagiaire }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ formation.duree }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_formation_index') }}">back to list</a>

    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
